<h1> Profile </h1>


<%# someone make this thing display horizontally %>
<ul id="menu">
  <li><strong>First:</strong>
  <%= @user.first %></li>

  <li><strong>Last:</strong>
  <%= @user.last %></li>

  <li><strong>Email:</strong>
  <%= @user.email %></li>
</ul>
<% if @user==current_user %>
<%= link_to 'Edit Your Account', edit_user_path(@user) %> 
<% end %>
<% id = @user.id %>
<% if @user!=current_user %>
	 <%= link_to 'Send Message', new_conversation_path(:id => id) %>
<% end %>
| <%= link_to 'Back to Home', '/' %>


<div>
	<% if @user.posts.any? %>
	  <h1> Posts (<%= @user.posts.count %>)</h1>
  	<!-- pagination -->
	<div align = "center" >
	
	  <%= will_paginate @posts%>
	</div>
	<!-- done pagination-->
	  <ol class="posts" >
	  <% @posts.each do |post| %>
	    	<%= render post %>
	  <% end %>
	  </ol>
	<!-- pagination -->
	<div align = "center" >
	<% @posts = @posts.paginate(:page => params[:page], :per_page => 5) %>
	  <%= will_paginate @posts%>
	</div>
	<!-- done pagination-->
	<% end %>
</div>
